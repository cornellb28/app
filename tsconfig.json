{
  "compilerOptions": {
    "allowJs": true,
    "module": "CommonJS",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "paths": {
      "*": ["node_modules/*"]
    },
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true
  },
  "files": ["src/lib/types.d.ts"],
  "include": ["src/**/*", "dev/**/*"],
  "exclude": ["node_modules"]
}

// https://www.typescriptlang.org/tsconfig#files
